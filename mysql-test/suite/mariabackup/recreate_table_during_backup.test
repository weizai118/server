let $targetdir=$MYSQLTEST_VARDIR/tmp/backup;
CREATE TABLE t1(i int) ENGINE=INNODB;
INSERT INTO t1 VALUES(0);

exec $XTRABACKUP --defaults-file=$MYSQLTEST_VARDIR/my.cnf --backup --target-dir=$targetdir --dbug=+d,recreate_table_during_backup 2>&1;


echo # xtrabackup prepare;

exec $XTRABACKUP  --prepare --target-dir=$targetdir 2>&1; 
